<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:scrollbars="none">

    <!-- Container principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card com detalhes do evento -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:elevation="4dp"
            android:background="?android:attr/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Imagem dentro do CardView (respeitando o padding) -->
                <ImageView
                    android:id="@+id/imageViewEventThumb"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:contentDescription="Imagem do evento"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginBottom="16dp"/>

                <!-- Nome do Evento -->
                <TextView
                    android:id="@+id/textViewDetalheNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome do Evento"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>

                <!-- Data do Evento -->
                <TextView
                    android:id="@+id/textViewDetalheData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data do Evento"
                    android:textSize="16sp"
                    android:paddingBottom="4dp"/>

                <!-- Local do Evento -->
                <TextView
                    android:id="@+id/textViewDetalheLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local do Evento"
                    android:textSize="16sp"
                    android:paddingBottom="4dp"/>

                <!-- Tipo do Evento -->
                <TextView
                    android:id="@+id/textViewDetalheTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo do Evento"
                    android:textSize="16sp"
                    android:paddingBottom="4dp"/>

                <!-- Valor do Evento -->
                <TextView
                    android:id="@+id/textViewDetalheValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valor da Inscrição"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botão para confirmar inscrição -->
        <Button
            android:id="@+id/buttonConfirmarInscricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Inscrição"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:paddingVertical="12dp"
            android:elevation="2dp"/>

        <!-- Botão para cancelar inscrição (oculto por padrão) -->
        <Button
            android:id="@+id/buttonCancelarInscricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar Inscrição"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:paddingVertical="12dp"
            android:elevation="2dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>