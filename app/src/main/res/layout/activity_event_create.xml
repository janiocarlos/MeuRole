<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para o nome do evento -->
    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Evento" />

    <!-- Campo para a data do evento -->
    <EditText
        android:id="@+id/editTextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data do Evento" />

    <!-- Campo para o local do evento -->
    <EditText
        android:id="@+id/editTextLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Local do Evento" />

    <!-- Campo para o valor da inscrição (pode ser numérico) -->
    <EditText
        android:id="@+id/editTextValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor da Inscrição (Ex: 0.00)"
        android:inputType="numberDecimal" />

    <!-- Botão para cadastrar -->
    <Button
        android:id="@+id/buttonCadastrarEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Evento"
        android:layout_marginTop="16dp" />

</LinearLayout>
