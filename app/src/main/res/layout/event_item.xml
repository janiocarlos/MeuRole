<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Imagem do evento -->
        <ImageView
            android:id="@+id/imageViewThumb"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="thumb_evento"/>

        <!-- Nome do evento -->
        <TextView
            android:id="@+id/textViewNomeEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Evento"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="22sp"
            android:paddingTop="8dp"/>

        <!-- Local do evento (ícone + texto) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/textViewLocalEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local do Evento"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Data do evento (ícone + texto) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_date_range"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/textViewDataEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data do Evento"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Botão "Ver detalhes" -->
        <Button
            android:id="@+id/buttonVerDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver detalhes"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>