<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPerfilTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meu Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Nome -->
        <TextView
            android:id="@+id/textViewPerfilNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome: ... "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- CPF -->
        <TextView
            android:id="@+id/textViewPerfilCPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF: ... "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Data de Nascimento -->
        <TextView
            android:id="@+id/textViewPerfilDataNasc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de Nasc.: ... "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/textViewPerfilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: ... "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Lista de eventos criados -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meus Eventos Criados"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMeusEventos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="false"/>

        <Button
        android:id="@+id/btnSigout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewMeusEventos" />
    </LinearLayout>


</ScrollView>